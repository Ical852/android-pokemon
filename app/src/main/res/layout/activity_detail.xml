<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/calm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.detail.DetailActivity">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Bulbasaur"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/pokemonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pokemonName">

        <include
            android:id="@+id/firstBadge"
            layout="@layout/pokemon_type_badge" />

        <View
            android:layout_width="10dp"
            android:layout_height="2dp"/>

        <include
            android:id="@+id/secondBadge"
            layout="@layout/pokemon_type_badge" />

    </LinearLayout>

    <ImageView
        android:id="@+id/pokemonImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/pokemon_logo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemonName" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/detail_desc_bg"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/hpIndicator"
            layout="@layout/stat_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <include
            android:id="@+id/atkIndicator"
            layout="@layout/stat_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <include
            android:id="@+id/defIndicator"
            layout="@layout/stat_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <include
            android:id="@+id/spAtkIndicator"
            layout="@layout/stat_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <include
            android:id="@+id/spDefIndicator"
            layout="@layout/stat_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <include
            android:id="@+id/spdIndicator"
            layout="@layout/stat_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <include
            android:id="@+id/totalIndicator"
            layout="@layout/stat_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/catchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Catch"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>